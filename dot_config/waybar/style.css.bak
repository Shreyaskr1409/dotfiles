* {
    border: none;
    border-radius: 0;
    min-height: 0;
    font-family: "iosevka nerd font";
    font-weight: 500;
    font-size: 14px;
    padding: 0;
}

window#waybar {
    background: #000205;
    /* Very Dark Blue/Black */
    border: 0px solid #001624; /* Dark Blue */
}

tooltip {
    background-color: #000205; /* Very Dark Blue/Black */
    border: 2px solid #406C7E; /* Desaturated Mid-Blue/Gray */
}

#clock,
#tray,
#cpu,
#memory,
#backlight,
#battery,
#network,
#pulseaudio {
    margin: 0px 2px;
    padding: 2px 8px;
}

#workspaces {
    background-color: #001624; /* Dark Blue */
    /* margin: 6px 0px 6px 6px; */
    border: 2px solid #01283A; /* Mid-Dark Blue */
}

#workspaces button {
    all: initial;
    min-width: 0;
    box-shadow: inset 0 -3px transparent;
    padding: 2px 4px;
    color: #728B9B; /* Light Desaturated Blue/Gray */
}

#workspaces button.active {
    background-color: #01283A; /* Mid-Dark Blue for pop-out background */
    color: #FFFFFF; /* White for pop-out text */
    box-shadow: inset 0 -3px #728B9B; /* Lighter underline for focus */
}

#workspaces button.focused {
    background-color: #01283A; /* Mid-Dark Blue for pop-out background */
    color: #FFFFFF; /* White for pop-out text */
    box-shadow: inset 0 -3px #728B9B; /* Lighter underline for focus */
}

#workspaces button.urgent {
    background-color: #406C7E; /* Desaturated Mid-Blue/Gray for urgent */
    color: #FFFFFF; /* White text for contrast */
}

#clock {
    background-color: #001624; /* Dark Blue */
    border: 2px solid #01283A; /* Mid-Dark Blue */
    color: #FFFFFF; /* White */
}

#tray {
    background-color: transparent; /* Light Desaturated Blue/Gray */
    border: 2px solid #406C7E; /* Desaturated Mid-Blue/Gray */
    color: #000205; /* Very Dark Blue/Black for contrast */
}

#battery {
    background-color: #001624; /* Desaturated Mid-Blue/Gray (less colorful) */
    border: 2px solid #01283A; /* Mid-Dark Blue */
    color: #FFFFFF; /* White */
}

#cpu,
#memory,
#network,
#backlight,
#pulseaudio {
    background-color: #001624; /* Desaturated Mid-Blue/Gray (less colorful) */
    border: 2px solid #01283A; /* Mid-Dark Blue */
    color: #FFFFFF; /* White */
}

#cpu.critical,
#memory.critical {
    background-color: #01283A; /* Mid-Dark Blue (for critical state) */
    border: 2px solid #001624; /* Dark Blue */
    color: #FFFFFF; /* White */
}

#battery.warning,
#battery.critical,
#battery.urgent {
    background-color: #01283A; /* Mid-Dark Blue (for warning/critical) */
    border: 2px solid #001624; /* Dark Blue */
    color: #FFFFFF; /* White */
}
